<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/action_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:fontFamily="@font/quicksand_bold"
        android:text="&lt; Back"
        android:textColor="@color/blue1"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/action_export_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/action_add_button"
        android:layout_centerVertical="true"
        android:layout_marginEnd="76dp"
        android:text="Export"
        android:textColor="@color/blue1"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@id/action_export_button"
        android:layout_marginStart="60dp"
        android:layout_alignStart="@id/action_export_button"
        android:tint="@color/blue1"
        android:src="@drawable/ic_export" />

    <TextView
        android:id="@+id/action_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:fontFamily="@font/quicksand_bold"
        android:text="Add +"
        android:textColor="@color/blue1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal" />

</RelativeLayout>